{
    "name": "add-multifile",
    "version": "1.0.0",
    "engines": {
        "vscode": "^1.22.0"
    },
    "main": "./out/extension.js",
    "scripts": {
        "watch": "tsc -b -w"
    },
    "packageManager": "yarn@3.2.4",
    "devDependencies": {
        "@types/vscode": "^1.72.0",
        "@typescript-eslint/eslint-plugin": "^5.41.0",
        "@typescript-eslint/parser": "^5.41.0",
        "eslint": "^8.26.0",
        "typescript": "^4.8.4"
    },
    "activationEvents": [
        "onStartupFinished"
    ],
    "contributes": {
        "configuration": {
            "title": "add-multifile",
            "properties": {
                "addmultifile.templates": {
                    "scope": "resource",
                    "type": "array",
                    "default": [],
                    "items": {
                        "type": "object",
                        "properties": {
                            "name": {
                                "type": "string",
                                "description": "The name of the template."
                            },
                            "description": {
                                "type": "string",
                                "description": "Description of the template."
                            },
                            "items": {
                                "type": "array",
                                "items": {
                                    "type": "string"
                                },
                                "description": "The file paths of the items included by the template. Additional folders are created as needed."
                            }
                        },
                        "required": ["name", "items"]
                    },
                    "description": "File structure definition of your multi-file templates."
                }
            }
        },
        "menus": {
            "explorer/context": [
                {
                    "when": "explorerResourceIsFolder == true",
                    "command": "addmultifile.new",
                    "group": "navigation@7"
                }
            ]
        },
        "commands": [
            {
                "command": "addmultifile.new",
                "title": "New Multi-File Item..."
            }
        ]
    }
}
